user "gub"
ruby "1.8.7"
ssh_options ["-o", "User=ubuntu", "-o", "StrictHostKeyChecking=no", "-o", "IdentityFile=#{ENV["TELEPORT_SSH_KEY"]}"]

role :master, :packages => %w(nginx)
server ENV["TELEPORT_IP"], :role => :master, :packages => %w(strace)
packages %w(atop)

after_install do
  run "touch /tmp/gub.txt"
end
